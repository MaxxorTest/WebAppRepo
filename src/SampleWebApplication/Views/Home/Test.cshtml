@{
    ViewBag.Title = "Test";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide test information.</p>

<form type>
    <label>
        Number 1
        <input name="Number1"/>
    </label>
    <br/>
    <label>
        Number 2
        <input name="Number2"/>
    </label>
    <br/>
    <br/>
    <input type="submit" value="submit" id="submit"/>
    <br/>
    <br/>
    <label>
        Answer<br/>
        <input name="Answer"/>
    </label>

</form>
@section scripts
{
    <script type="text/javascript">

        $(document).ready(function() {
            $("#submit").click(function() {
                var num1 = $("input[name='Number1'").val();
                var num2 = $("input[name='Number2'").val();


                var actionUrl = '@Url.Action("TestResult", "Home")';
                var data = {};
                data.Number1 = num1;
                data.Number2 = num2;
                //$.getJSON(actionUrl, displayData);

                $.post(actionUrl, data, function(data, textStatus) {
                    //data contains the JSON object
                    //textStatus contains the status: success, error, etc
                    displayData(data);
                }, "json");


                return false;
            });

            function displayData(response) {
                if (response != null) {
                    $("input[name='Answer']").val(response);
                }
            }
        });

    </script>
}