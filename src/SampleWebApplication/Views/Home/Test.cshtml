@{
    ViewBag.Title = "Test";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide test information.</p>

<form>
    <label>
        Number 1
        <input name="Number1" id="Number1"/>
    </label>
    <br/>
    <label>
        Number 2
        <input name="Number2" id="Number2"/>
    </label>
    <br/>
    <br/>
    <input type="submit" value="submit" id="submit"/>
    <br/>
    <br/>
    <label>
        Answer<br/>
        <input name="Answer" id="Answer"/>
    </label>

</form>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function() {
            //Add jquery code here
            //Add jquery code here
            $("#submit").click(function () {
                var val1 = parseInt($("#Number1").val());
                var val2 = parseInt($("#Number2").val());

                $("#Answer").val(val1 + val2);
            });
        });

    </script>
}